{% extends 'basebo.html.twig' %}

{% block content %}

    <h1>Liste des badges</h1>
    <table border="2" width="900px" style="text-align: center">
        <tr>
           <th>Titre</th><th>Score minimal</th><th>Score maximal</th><th>Logo</th><th>Date de cr√©ation</th><th>Date de modification</th><th>Supression</th><th>Modification</th>
        </tr>

        {% for p in reader %}
            <tr>
                <td>{{ p.nom }}</td>
                <td>{{ p.min }}</td>
                <td>{{ p.max }}</td>


                <td> <img src="{{ asset('devis/' ~ p.devisName) }}" height="150px"></td>
                <td>{{ p.createdAt|date('d-m-Y') }}</td>
                <td>{{ p.updatedAt|date('d-m-Y') }}</td>


                <td><a class="btn btn-danger" href="{{ path('supprimer_badge_admin' ,{'id':p.id})}}" >Supprimer</a></td>
                <td><a class="btn btn-primary" href="{{ path('modifier_badge_admin' ,{'id':p.id})}}" >Modifier</a></td>

            </tr>
        {% endfor %}


            </table>
{% endblock %}
