{% extends 'base.html.twig' %}

{% block content %}
    <center>

    <h1>Billet</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ billet.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ billet.code }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ billet.prix }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if billet.date %}{{ billet.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('billet_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('billet_edit', { 'id': billet.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}</center>
        </li>
    </ul>
{% endblock %}
