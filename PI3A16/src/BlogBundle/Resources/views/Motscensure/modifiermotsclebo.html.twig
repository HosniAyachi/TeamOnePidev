{% extends 'basebo.html.twig' %}
{% block content %}
    <h1>Modifier un mot censure</h1>

    {{ form_start(edit_form) }}
    Texte mot : {{ form_widget(edit_form.textmot) }}
    Gravite mot : {{ form_widget(edit_form.gravitemot) }}
    <input type="submit" value="Modifier" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('affichermotsclebo') }}">Retour</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}