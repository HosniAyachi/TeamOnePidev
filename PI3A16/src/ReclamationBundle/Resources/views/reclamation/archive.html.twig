{% extends 'basebo.html.twig' %}
{% block navbar %}
    <ul class="navbar-nav navbar-nav-left header-links d-none d-md-flex">
        <li class="nav-item">
            <a href="{{  path('reclamation_index') }}" class="nav-link">Back</a>
        </li>
        <li class="nav-item">
            <a href="{{  path('reclamation_list') }}" class="nav-link">Reclamations
            </a>
        </li>
        <li class="nav-item active">
            <a href="{{  path('archive') }}" class="nav-link">
                <img src="{{ asset ('images/archive.png') }}" style="width: 30px"/>Archive
            </a>
        </li>
        <li class="nav-item ">
            <a href="{{ path('corbeille') }}" class="nav-link">
                <img src="{{ asset ('images/Delete.png') }}" style="width: 30px"/> Corbeille</a>
        </li>

    </ul>
{% endblock %}

        {% block content %}
            <center>

                <div class="container">
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6 contact_form_container">


                            <table class="table   table-hover table-striped">
                                <thead class="thead-dark">
                                <tr>
                                    <th>Id</th>
                                    <th>Sujet</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>

                                {% for reclamation in reclamations %}
                                    <tr>
                                        <td><a href="{{ path('reclamation_show', { 'id': reclamation.id }) }}">{{ reclamation.id }}</a></td>
                                        <td>{{ reclamation.sujet }}</td>
                                        <td>{% if reclamation.dateR %}{{ reclamation.dateR|date('Y-m-d') }}{% endif %}</td>
                                        <td>
                                            <a href="{{ path('reclamation_showBo', { 'id': reclamation.id }) }}">show</a>
                                        </td>
                                    </tr>
                                {% endfor %}

                            </table>

                        </div>
                    </div>
                </div>
            </center>
        {% endblock %}
