{% extends 'basebo.html.twig' %}
{% block navbar %}
<nav class="navbar default-layout col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
    <div class="text-center navbar-brand-wrapper d-flex align-items-top justify-content-center">
        <a class="navbar-brand brand-logo" href="index.html">
            <img src="{{ asset('bo/images/logo.svg') }}" alt="logo" />
        </a>
        <a class="navbar-brand brand-logo-mini" href="index.html">
            <img src="{{ asset('bo/images/logo-mini.svg') }}" alt="logo" />
        </a>
    </div>
    <div class="navbar-menu-wrapper d-flex align-items-center">
        <ul class="navbar-nav navbar-nav-left header-links d-none d-md-flex">
            <li class="nav-item">
                <a href="#" class="nav-link">Schedule
                    <span class="badge badge-primary ml-1">New</span>
                </a>
            </li>
            <li class="nav-item active">
                <a href="#" class="nav-link">
                    <i class="mdi mdi-elevation-rise"></i>Reports</a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="mdi mdi-bookmark-plus-outline"></i>Score</a>
            </li>
        </ul>
        {% endblock %}

        {% block content %}
    <center>
        <h1>Reclamation</h1>

        <table>

            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ reclamation.sujet }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ reclamation.contenu }}</td>
            </tr>
            <tr>
                <th>Traite</th>
                <td>{% if reclamation.traite %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Dater</th>
                <td>{% if reclamation.dateR %}{{ reclamation.dateR|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Archive</th>
                <td>{% if reclamation.archive %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Corbeille</th>
                <td>{% if reclamation.corbeille %}Yes{% else %}No{% endif %}</td>
            </tr>

        </table>

        <ul>
            <li>
                <a href="{{ path('reclamation_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('reclamation_edit', { 'id': reclamation.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </center>
{% endblock %}
