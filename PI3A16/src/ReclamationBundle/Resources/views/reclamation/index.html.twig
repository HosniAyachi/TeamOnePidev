{% extends 'base.html.twig' %}

{% block content %}
    <center>

        <h1>Reclamations list</h1>

        <table>
            <thead>
            <tr>
                <th>Id</th>
                <th>Sujet</th>
                <th>Contenu</th>
                <th>Traite</th>
                <th>Dater</th>
                <th>Archive</th>
                <th>Corbeille</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for reclamation in reclamations %}
                <tr>
                    <td><a href="{{ path('reclamation_show', { 'id': reclamation.id }) }}">{{ reclamation.id }}</a></td>
                    <td>{{ reclamation.sujet }}</td>
                    <td>{{ reclamation.contenu }}</td>
                    <td>{% if reclamation.traite %}Yes{% else %}No{% endif %}</td>
                    <td>{% if reclamation.dateR %}{{ reclamation.dateR|date('Y-m-d') }}{% endif %}</td>
                    <td>{% if reclamation.archive %}Yes{% else %}No{% endif %}</td>
                    <td>{% if reclamation.corbeille %}Yes{% else %}No{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('reclamation_show', { 'id': reclamation.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('reclamation_edit', { 'id': reclamation.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


                <a href="{{ path('reclamation_new') }}">Create a new reclamation</a>

    </center>
{% endblock %}
