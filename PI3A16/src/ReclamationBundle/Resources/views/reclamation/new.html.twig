    <div class="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="contact_form_container">
                        <div class="contact_form_title">Get in touch</div>
                      <center>
                                    {{ form_start(form) }}
                           <div id="type">
                               {{ form_widget(form.type, {'attr' : {'class': 'contact_input','placeholder':'Type'}}) }}<br><br>
                           </div>
                           <div id="event" >
                               <select name="idEvent" class="contact_input">
                                   <option value="null"  >  </option>
                                   {% for e in events %}
                                   <option value="{{ e.idEvent.id }}">
                                       {{ e.idEvent.name }}
                                   </option>
                                   {% endfor %}
                               </select>
                            </div>
                           <br><br>
                            <div id="org" >
                                <select name="idOrganisateur" class="contact_input">
                                    <option value="null">  </option>
                                    {% for org in organisateurs %}
                                        <option value="{{ org.id }}">
                                            {{ org.name }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                                  <br><br>
                            {{ form_widget(form.sujet, {'attr' : {'class': 'contact_input','placeholder':'Sujet...'}}) }}<br><br>
                            {{ form_widget(form.contenu, {'attr' : {'class': 'contact_textarea contact_input','placeholder':'Contenu...'}}) }}<br><br>
                            <button class="button contact_button"><span> Envoyer la Reclamation </span></button>

                                      {{ form_end(form) }}
                              </center>
                    </div>
                </div>
