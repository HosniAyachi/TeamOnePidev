    <script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
    <script>
    //pour vérifier l'intégration de la biblio jquery
    $(document).ready(
     function() {
         //alert("Script working properly"); });
         $('#event').hide();
         $('#org').hide();

         $("#reclamationbundle_reclamation_type").change(function () {
             $.ajax({
                 type: 'POST',
                 typeValue: {"Select": $('#reclamationbundle_reclamation_type').val()}

             });

             if ($typeValue.val() == "Organisateur") {
                 $('#org').show();
             }
             else if ($typeValue.val().equals('Événement')) {
                 $('#event').show();
             }


         });

     });

    </script>




