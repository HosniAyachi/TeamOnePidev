{% extends 'base.html.twig' %}

{% block body %}
    <h1>Notification</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ notification.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ notification.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ notification.description }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ notification.icon }}</td>
            </tr>
            <tr>
                <th>Route</th>
                <td>{{ notification.route }}</td>
            </tr>
            <tr>
                <th>Parameters</th>
                <td>{% if notification.parameters %}{{ notification.parameters|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if notification.date %}{{ notification.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Seen</th>
                <td>{% if notification.seen %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('notification_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('notification_edit', { 'id': notification.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
